{
    "script": {
        "initialState": "on",
        "states": {
            "on": {
                "events": [
                    {
                        "type": "timer",
                        "interval": 200,
                        "nextState": "off"
                    }
                ]
            }
        },
        "transitions": [
            {
                "type": "command",
                "from": "off",
                "to": "on",
                "command": "echo on"
            },
            {
                "type": "command",
                "from": "on",
                "to": "off",
                "command": "echo off"
            }
        ]
    }
}