{
    "defaults": {
        "message": "xx",
        "yay": "\\o/"
    },
    "cmd": [
        "+randommap"
    ],
    "files": [
        {
            "path": ".a/b/yay1.txt",
            "content": "yeah!\n${yay}"
        },
        {
            "path": ".c/d/yay2.txt",
            "content": "yeah?\n${message}"
        }
    ],
    "script": {
        "initialState": "idle",
        "states": {
            "idle": {
                "events": [
                    {
                        "type": "literal",
                        "value": "'server.cfg' not present; not executing.",
                        "nextState": "end"
                    }
                ]
            },
            "end": {
                "events": [
                    {
                        "type": "timer",
                        "interval": 10000,
                        "nextState": "quit"
                    }
                ]
            }
        },
        "transitions": [
            {
                "to": "end",
                "command": "echo 'Quit in 10 seconds ${message}'"
            },
            {
                "to": "quit",
                "command": "quit"
            }
        ]
    }
}